<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imageviewSearchbaihat"
        android:layout_margin="3dp"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/textviewsearchtenbaihat"
        android:textSize="18sp"
        android:textColor="#F44336"
        android:text="song name"
        android:layout_toRightOf="@id/imageviewSearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

<TextView
    android:layout_below="@id/textviewsearchtenbaihat"
        android:id="@+id/textviewsearchtencasi"
        android:textSize="18sp"
        android:textColor="#2196F3"
        android:text="singer name"
        android:layout_toRightOf="@id/imageviewSearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/iconlove"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/imageviewsearchluotthich"/>



</RelativeLayout>